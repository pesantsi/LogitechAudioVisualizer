<Window x:Class="LogitechAudioVisualizer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:LogitechAudioVisualizer.ViewModels"
        xmlns:local="clr-namespace:LogitechAudioVisualizer"
        xmlns:localV="clr-namespace:LogitechAudioVisualizer.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"       
        Title="MyApp">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Column="0" Text="{Binding SdkVersionString}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <localV:OutputUserControl Grid.Column="1" DataContext="{Binding OutputViewModel}" />
    </Grid>


</Window>
